<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/setup_root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/setup_wizard_background"
  android:fitsSystemWindows="true">

  <androidx.core.widget.NestedScrollView
    android:id="@+id/setup_scroll"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:padding="24dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical">

      <com.google.android.material.card.MaterialCardView
        android:id="@+id/setup_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="?attr/colorOutlineVariant"
        app:strokeWidth="1dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="24dp">

          <ImageView
            android:id="@+id/setup_logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo" />

          <TextView
            android:id="@+id/setup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="@string/setup_title"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" />

          <TextView
            android:id="@+id/setup_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text="@string/setup_subtitle"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />

          <FrameLayout
            android:id="@+id/setup_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <LinearLayout
              android:id="@+id/page_games"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/setup_games_title"
                android:src="@drawable/stadia_controller_24px"
                android:tint="@color/brand_blue" />

              <TextView
                android:id="@+id/setup_games_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/setup_games_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

              <TextView
                android:id="@+id/setup_games_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/setup_games_body"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

              <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pick_games_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/setup_pick_games"
                app:icon="@drawable/stadia_controller_24px"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

              <TextView
                android:id="@+id/games_path_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/setup_wizard_path_background"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/setup_not_set"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <LinearLayout
              android:id="@+id/page_data"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:visibility="gone">

              <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/setup_data_title"
                android:src="@drawable/data_table_24px"
                android:tint="@color/brand_blue" />

              <TextView
                android:id="@+id/setup_data_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/setup_data_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

              <TextView
                android:id="@+id/setup_data_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/setup_data_body"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

              <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pick_data_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/setup_pick_data"
                app:icon="@drawable/data_table_24px"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

              <TextView
                android:id="@+id/data_path_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/setup_wizard_path_background"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/setup_not_set"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
          </FrameLayout>

          <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

          <LinearLayout
            android:id="@+id/setup_step_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
              android:id="@+id/step_indicator_games"
              android:layout_width="36dp"
              android:layout_height="6dp"
              android:background="@drawable/setup_wizard_indicator_active" />

            <View
              android:id="@+id/step_indicator_data"
              android:layout_width="36dp"
              android:layout_height="6dp"
              android:layout_marginStart="8dp"
              android:background="@drawable/setup_wizard_indicator_inactive" />
          </LinearLayout>

          <LinearLayout
            android:id="@+id/setup_nav_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_wizard_back"
              style="?attr/materialButtonOutlinedStyle"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/setup_back" />

            <com.google.android.material.button.MaterialButton
              android:id="@+id/btn_wizard_next"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="12dp"
              android:layout_weight="1"
              android:text="@string/setup_next" />
          </LinearLayout>
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
